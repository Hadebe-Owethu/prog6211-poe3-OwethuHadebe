<Window x:Class="POEPart3.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Score display -->
            <RowDefinition Height="Auto"/>
            <!-- Question -->
            <RowDefinition Height="*" />
            <!-- Options -->
            <RowDefinition Height="Auto"/>
            <!-- Feedback -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Score tracker -->
        <TextBlock x:Name="txtScore"
                   Text="Score: 0 / 10"
                   FontSize="12"
                   Foreground="Gray"
                   HorizontalAlignment="Right"
                   Grid.Row="0"
                   Margin="0,0,0,10"/>

        <!-- Question text -->
        <TextBlock x:Name="txtQuestion"
                   FontSize="16"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"
                   Grid.Row="1" />

        <!-- Options -->
        <ListBox x:Name="lstOptions"
                 FontSize="14"
                 Grid.Row="2"
                 SelectionMode="Single" />

        <!-- Feedback -->
        <TextBlock x:Name="txtFeedback"
                   FontSize="14"
                   Foreground="DarkGreen"
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"
                   Grid.Row="3" />

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"
                    Grid.Row="4">
            <Button x:Name="btnSubmit" Content="Submit" Width="80" Margin="0,0,10,0" Click="btnSubmit_Click"/>
            <Button x:Name="btnNext" Content="Next" Width="80" Click="btnNext_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
